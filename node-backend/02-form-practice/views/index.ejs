  <body>
    <!-- Validation 적용하기 실습 -->
    <form action="/join" method="post" name="join">
      이름 <input type="text" name="name" required> <br />
      비밀번호 <input type="password" name="pw" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$@$!%*?&])[A-Za-z\d$@$!%*?&]{8,}" title="소문자, 대문자, 숫자, 특수문자를 한 번 이상 사용, 8자 이상"> <br />
      전화번호 <input type="text" name="phone" required pattern="^0\d{1,2}(-|\))\d{3,4}-\d{4}$" title="010-0000-0000 형식"> <br />
      아이디 <input type="text" name="id" minlength="5" pattern="^([a-z0-9]){5,}$"> <br />
      <fieldset>
        <legend> 성별 </legend>
        <input type="radio" name="gender" value="male" required> 남
        <input type="radio" name="gender" value="female" required> 여
      </fieldset>
      <button type="submit">회원가입</button>
    </form>


