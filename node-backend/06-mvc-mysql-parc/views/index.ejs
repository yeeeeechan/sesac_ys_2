<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <title>회원가입_실습</title>
  </head>
  <body>
    <form name="joinForm">
      <fieldset>
        <legend> 회원가입 정보 </legend>
        <input type="text" name="userid" placeholder="아이디" /> <br />
        <input type="text" name="name" placeholder="이름" /> <br />
        <input type="password" name="password" placeholder="비밀번호" /> <br />
        <button type="button" onclick="join()">가입</button>
      </fieldset>
    </form>
    <h3 id="resultMsg1"></h3>

    <form name="loginForm">
      <fieldset>
        <legend> 로그인 정보 </legend>
        <input type="text" name="id" placeholder="로그인 아이디" /> <br />
        <input type="password" name="pw" placeholder="비밀번호" /> <br />
        <button type="button" onclick="login()"> 로그인 </button>
      </fieldset>
    </form>
    <h3 id="resultMsg2"></h3>

    <script>
      function login() {
        const form = document.forms["loginForm"]
        const data = {
          id: form.id.value,
          pw: form.pw.value
        }

        axios({
          method: "post",
          url: "/login",
          data: data
        }).then((res) => {
          console.log("res", res)
          if (res) {
            $("#resultMsg2").html(`로그인 성공!`)
          } else {
            $("#resultMsg2").html(`로그인 실패!`)
          }
        })
      }

      function join() {
        const form = document.forms["joinForm"]
        const data = {
          id: form.userid.value,
          name: form.name.value,
          pw: form.password.value,
        }

        axios({
          method: "post",
          url: "/welcome",
          data: data,
        }).then((res) => {
          console.log("res.data.id", res.data.id)
          $("#resultMsg1").html(`회원가입 성공! ${res.data.id} 님, 환영합니다.`)
        })
      }
    </script>
  </body>
</html>